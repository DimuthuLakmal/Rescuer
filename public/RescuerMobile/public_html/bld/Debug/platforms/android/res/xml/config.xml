<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.BlankCordovaApp5" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps">
    <preference name="loglevel" value="DEBUG" />
    <feature name="SpeechRecognition">
        <param name="android-package" value="org.apache.cordova.speech.SpeechRecognition" />
    </feature>
    <feature name="TTS">
        <param name="android-package" value="com.wordsbaking.cordova.tts.TTS" />
        <param name="onload" value="true" />
    </feature>
    <name>Find My Bus</name>
    <description>An application to provide real time data of locations of buses and available seat numbers</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">Team Titans</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="windows-target-version" value="8.0" />
    <preference name="windows-phone-target-version" value="8.1" />
    <vs:plugin name="org.apache.cordova.speech.speechrecognition" version="0.1.0" />
    <vs:plugin name="cordova-plugin-tts" version="0.2.3" />
    <vs:platformSpecificValues />
</widget>
